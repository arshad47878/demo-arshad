<div class="col">
  <h1 style="text-align: center; background-color: #9e9e9e;">Log in</h1>

  <div style="background-color: #cbd5da;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <br>

        <div  class="field col-6 mx-auto">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <br>

        <div  class="field col-6 mx-auto">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <br>

        <% if devise_mapping.rememberable? %>
          <div class="field col-6 mx-auto">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <br>
        <br>

        <div class="actions d-grid gap-2 col-6 mx-auto shadow">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>

      <br>
      <br>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
