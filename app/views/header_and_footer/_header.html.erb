<% if current_user %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">DEMO-APP</a>
      <div class="nav-link row justify-content-end" style="margin-left: 2040px;">
          <span>
            <%= link_to 'Edit User', edit_user_registration_path, class: "btn btn-outline-light"%>
          </span>
          <span>
            <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, width: "11%", style: " border-radius: 50%; " %>
            <% end %>
          </span>
          <span>
            <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-outline-light" %>
          </span>
      </div>
    </div>
  </nav>
<% else %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">DEMO-APP</a>
      <div class="nav-link row justify-content-end">
        <div class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: "link-light", style: "text-decoration:none" %>
        </div>
      </div>
    </div>
  </nav>
<% end %>
