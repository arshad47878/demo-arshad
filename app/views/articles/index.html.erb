


  <div class="col">
    <div class="row justify-content-between" style="margin-top: 12px;">
      <h2 class="col-6">Listing Articles</h2>
      <%= link_to 'New article', new_article_path, class: "btn btn-primary col-1"%>
    </div>
    <table class="table table-striped table-hover" style="margin-top: 12px;">
      <tr class="shadow table-dark">
        <th style="text-align: center;">Title</th>
        <th style="text-align: center;">Text</th>
        <th colspan="3" style="text-align:center;">Action</th>
      </tr>
      <% @articles.each do |article| %>
        <tr>
          <td style="text-align: center;"><%= article.title %></td>
          <td style="text-align: center;"><%= article.text %></td>
          <td style="text-align: center;"><%= link_to 'Show', article_path(article), class: "btn btn-primary" %></td>
          <td style="text-align: center;"><%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %></td>
          <td style="text-align: center;"><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
      <% end %>
    </table>
    <%= paginate @articles %>

  </div>


