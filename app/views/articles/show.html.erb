<div class="col">
  <p style="font-size: 30px; margin-top: 12px;">
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p style="font-size: 30px;">
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
  <br>
  <div class="row justify-content-between">
    <%= link_to 'Back', articles_path, class: "btn btn-dark col-1" %>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary col-1" %>
  </div>
  <br>
  <br>
  <hr>
  <br>
  <h2>Comments</h2>
  <br>
  <%= render @article.comments %>
  <br>
  <hr>
  <br>
  <h2>Add a comment:</h2>
  <br>
  <%= render 'comments/form' %>

</div>
